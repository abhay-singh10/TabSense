{
  "manifest_version": 3,
  "name": "TabSense ",
  "version": "1.0.0",
  "description": "Smart Chrome Tab Manager",
  "author": "Abhay Singh",
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "32": "icons/icon.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://cdn.jsdelivr.net;"
  },
  "icons": {
    "32": "icons/icon.png"
  },
  "web_accessible_resources": [{
    "resources": ["icons/*", "dashboard/*"],
    "matches": ["<all_urls>"]
  }]
}
